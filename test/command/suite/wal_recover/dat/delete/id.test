# wal_recover can't use with HTTP because requests via HTTP are always
# processed by workers. Workers never use primary WAL role.
#@require-interface stdio

#@require-feature message_pack

#$GRN_WAL_ROLE=primary

#@disable-logging
cache_limit --max 0
#@enable-logging

table_create Data TABLE_DAT_KEY ShortText

load --table Data
[
{"_key": "key"}
]

select Data

#@disable-logging
io_flush
#@copy-path #{db_path}.0000100 #{db_path}.0000100.keep
#@copy-path #{db_path}.0000100.001 #{db_path}.0000100.001.keep
#@enable-logging

delete Data --id 1

select Data

#@disable-logging
#@copy-path #{db_path}.0000100.wal #{db_path}.0000100.wal.keep
io_flush
thread_limit 1
database_unmap
#@copy-path #{db_path}.0000100.keep #{db_path}.0000100
#@copy-path #{db_path}.0000100.001.keep #{db_path}.0000100.001
#@copy-path #{db_path}.0000100.wal.keep #{db_path}.0000100.wal
#@enable-logging

select Data

wal_recover

select Data
